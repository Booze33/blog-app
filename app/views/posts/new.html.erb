<div class="new-post">
  <%= form_with model: @post, url: user_posts_path(@user), local: true do |f| %>
    <h2 class="comments-header">Create New Posts</h2>
    <div class="form-group">
      <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
    </div>
    <div class="form-group">
      <%= f.text_area :text, class: "form-control", placeholder: "Post content" %>
    </div>
    <%= f.hidden_field :comments_counter, value: 0 %>
    <%= f.hidden_field :likes_counter, value: 0 %>
    <%= f.submit "Create Post", class: "btn btn-primary" %>
  <% end %>
</div>
