<div>
  <h2 class="Head">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "form-btn-2" %>
    </div>

    <div>
      <%= link_to "Log in", new_session_path(resource_name), class: "Link" %><br />
      <%= link_to "Sign up", new_registration_path(resource_name), class: "Link" %><br />
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>